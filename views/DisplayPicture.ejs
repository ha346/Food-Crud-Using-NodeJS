    <body>
        <form action="/food/editpicture" method="post" enctype="multipart/form-data">
            <input type="hidden" value="<%= fid %>" name="fooddetailid">
            <input type="hidden" value="<%= foodpicture %>" name="oldpicture">
        <div class="mainContainer">
            <div class="subDiv">
                <div class="textHeading"><%= fname %></div><br>

                <div class="imageStyle"><img src="/images/<%= foodpicture %>" width="200"></div><br>
            
        

       

       <div class="row">
        <div class="file-field input-field col s12" style="margin-top: 0px;">
            <div class="btn">
              <span>Edit food picture</span>
              <input type="file" name="picture">
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>
       </div>

       <div class="row">
        <div class="input-field col s12" style="margin-top: 0px; display: flex;justify-content: center;align-items: center;">
            <button class="btn waves-effect waves-light" type="submit" name="action">Edit Picture
                <i class="material-icons right">edit</i>
              </button>
        </div>

         
       </div>


    </div>
</div>
</form>
